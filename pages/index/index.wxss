.header{
  display: flex;
  flex-direction: column;
  width: 100%;
  background-color: #008eff;
  color:aliceblue;
}
.loaction,.seach{
  display: flex;
  align-items:center; 
  justify-content: center;
  height: 100rpx;
}
.selfLoaction{
  align-self: flex-start;
  margin-left: 5%;
}
.input{
  display: inline-block;
  width: 90%;
  padding: 10rpx;
  border-radius: 10rpx;
  background-color: #ffffff;
  text-align: center;
  font-size: 30rpx
}
.banner{
  width: 100%;
  max-height: 200rpx;
  background-color: #008eff;
}
.slide-image{
  width: 100%;
  max-height: 200rpx;
}

.iconfont{
  font-family:"iconfont";
  font-size:16rpx;
  font-style:normal;
  -webkit-font-smoothing: antialiased;
  -webkit-text-stroke-width: 0.2px;
  -moz-osx-font-smoothing: grayscale; 
  padding-left:20rpx
}